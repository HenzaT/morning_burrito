<div class="container mt-3">

  <div class="d-flex flex-row align-items-center">
    <%= link_to dashboard_path, class: "mx-3 fs-4", title: "Back to dashboard", data: { turbo: false } do %>
      <i class="arrow fa-solid fa-arrow-left fa-beat text-dark" style="--fa-animation-duration: 2s;"></i>
    <% end %>
  </div>

  <div class="d-flex flex-row justify-content-center">
    <h4 class="mb-3 text-center">Your Learning Track</h4>
  </div>


  <div class="d-flex flex-column align-items-center">
    <% @completed_challenges.each do |challenge| %>
      <%= link_to "/completed_challenges/#{challenge.id}", class: "text-decoration-none" do %>
        <div class="dashboard-card text-bg-primary my-3 rounded-5" style="width: 70vw; height: 10rem;">
          <div class="card-body" style="background-color: white;"></div>
          <div class="d-flex justify-content-around align-items-center card-text">
            <% if challenge.challenge.category == 'Creative Lesson' %>
              <i class="fa-solid fa-circle-play text-dark"></i>
            <% elsif challenge.challenge.category == 'Creative Writing' %>
              <i class="fa-solid fa-book-open text-dark"></i>
            <% else %>
              <i class="fa-solid fa-paintbrush text-dark"></i>
            <% end %>
            <%= challenge.challenge.name.titleize %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="challenge-banner text-sm-center d-flex align-items-end">
  <div class="ms-4">
    <h1><strong><%= @completed_challenge.challenge.name %></strong></h1>
    <p><i class="fa-solid fa-calendar-day"></i> <i>Completed on: <%= @completed_challenge.completion_date.strftime("%A %e, %Y") %></i></p>

    <div class="my-4">
      <button class="preference-button btn rounded-pill disabled">
        <%= render "category_icons" %>
        <%= @completed_challenge.challenge.category %>
      </button>

      <button class="preference-button btn rounded-pill disabled">
        <i class="fa-solid fa-hourglass-half text-dark"></i>
        <%= "#{@completed_challenge.challenge.length} minutes" %>
      </button>
    </div>
  </div>
</div>

<div class="d-flex flex-row align-items-center">
  <%= link_to dashboard_path, class: "mx-3 my-3 fs-4", title: "Back to dashboard", data: { turbo: false } do %>
    <i class="arrow fa-solid fa-arrow-left fa-bounce text-dark"></i>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 col-xl-6 my-2">
      <div class="row">
        <div class="col-1">
          <i class="fa-solid fa-clock-rotate-left fa-1x"></i>
        </div>
        <div class="col-11">
          <h4><strong>Here's what you did:</strong></h4>
          <p><%= @completed_challenge.challenge.description %></p>
        </div>
      </div>
    </div>

    <div class="col-12 col-xl-6 my-4">
      <div class="row">
        <div class="col-1">
          <%= render "category_icons" %>
        </div>
        <div class="col-11">
          <h4><strong>What you created:</strong></h4>
          <% if @completed_challenge.challenge_text %>
            <p><%= @completed_challenge.challenge_text %></p>
          <% elsif @completed_challenge.photo.attached? %>
            <p>This will be a photo</p>
          <% else %>
            <p>Nothing to see here... yet</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

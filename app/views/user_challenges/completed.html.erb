<div class="challenge-banner text-sm-center d-flex align-items-end">
  <div class="ms-4">
    <h1><strong>Revisit your <br>past challenges</strong></h1>

    <div class="my-4">
      <button class="preference-button btn rounded-pill disabled">
        <%= render "category_icons" %>
        <%= @completed_challenge.challenge.category %>
      </button>

      <button class="preference-button btn rounded-pill disabled">
        <i class="fa-solid fa-hourglass-half text-dark"></i>
        <%= "#{@completed_challenge.challenge.length} minutes" %>
      </button>
    </div>
  </div>
</div>

<div class="d-flex flex-row justify-content-between align-items-center">
  <%= link_to dashboard_path, class: "mx-3 my-3 fs-4", title: "Back to dashboard", data: { turbo: false } do %>
    <i class="arrow fa-solid fa-arrow-left fa-bounce text-dark"></i>
  <% end %>
  <p class="mx-3">
    <i class="fa-solid fa-calendar-day"></i> <i><%= @completed_challenge.completion_date.strftime("%A %e, %Y") %></i>
  </p>
</div>

<div class="container">
  <div class="row">
    <div class="col-2">
      <%= image_tag "burrito-colour.png", class: "burrito-logo" %>
    </div>
    <div class="col-10">
      <h4><strong>Well done on completing <br><i><%= @completed_challenge.challenge.name %></i> !</strong></h4>
      <p><%= @completed_challenge.challenge.description %></p>
    </div>
  </div>
  <div class="row my-5">
    <div class="col-2">
      <%= image_tag "nachos-colour.png", class: "burrito-logo" %>
    </div>
    <div class="col-10">
      <h4 class="my-3"><strong>Here is what you did!</strong></h4>
      <div class="mx-auto">
        <% if @completed_challenge.challenge_text %>
          <p><%= @completed_challenge.challenge_text %></p>
        <% elsif @completed_challenge.photo.attached? %>
          <%= image_tag @completed_challenge.photo, style: "height: 80%; width: 80%;", class: "border border-dark rounded-4" %>
        <% else %>
          <p>Nothing to see here... yet</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

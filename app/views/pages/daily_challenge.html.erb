    <div class="ms-4">
      <h1><strong>Your Creative Boost <br>is Served</strong></h1>

      <div>
        <div class="my-4">
          <%= link_to current_user.category_preference, edit_user_path(current_user), class: "preference-button btn rounded-pill" %>
          <%= link_to "#{current_user.length_preference} mins" , edit_user_path(current_user), class: "preference-button btn rounded-pill" %>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="my-5">
      <h1>
        <strong>
          We love a good<br>
          <%=@daily_challenge.name%>

<div class="col-12 medium-banner d-flex flex-column justify-content-end">
  <div class="ms-4">
    <h1><strong>Your creative <br>journey so far</strong></h1>

    <div class="my-4">
      <button class="preference-button btn rounded-pill my-2 disabled">
        <% if current_user.category_preference == 'Creative Lesson' %>
          <i class="fa-solid fa-circle-play text-dark"></i>
        <% elsif current_user.category_preference == 'Creative Writing' %>
          <i class="fa-solid fa-book-open text-dark"></i>
        <% else %>
          <i class="fa-solid fa-paintbrush text-dark"></i>
        <% end %>
        <%= link_to current_user.category_preference, edit_user_path(current_user), class: "text-decoration-none text-dark" %>
      </button>

      <button class="preference-button btn rounded-pill my-2 disabled">
        <i class="fa-solid fa-hourglass-half text-dark"></i>
        <%= link_to "#{current_user.length_preference} minutes", edit_user_path(current_user), class: "text-decoration-none text-dark" %>
      </button>
    </div>
  </div>
</div>

<div class="container">
  <div class="preferences text-center my-5">
    <%# <h4><b>Set your creative vibe</b></h4> %>
    <%= link_to "Set your creative vibe", edit_user_path(current_user), class: "btn-pink show-button btn btn-lg rounded-pill" %>
  </div>

  <div class="track-cards">
    <div class="row d-flex align-items-center">
      <div class="col-2">
        <%= image_tag "nachos-colour.png", class: "burrito-logo" %>
      </div>
      <div class="col-10">
        <h4>Your learning track</h4>
      </div>
    </div>
    <% if @last_2_challenges.count > 0 %>
      <%= render "your_learning_track" %>
    <% else %>
      <p>You have no completed challenges yet</p>
    <% end %>
  </div>
  <div class="my-5">
    <div class="row d-flex align-items-center">
      <div class="col-2">
        <%= image_tag "nachos-colour.png", class: "burrito-logo" %>
      </div>
      <div class="col-10">
        <h4>Dive back in</h4>
      </div>
    </div>
    <% if @unfinished_2_challenges.count > 0 %>
      <%= render "unfinished_challenges" %>
    <% else %>
      <p>You haven't started a challenge yet</p>
    <% end %>
  </div>

  <div class="d-flex flex-column gap-3 text-center">
    <%= link_to "Review all past challenges...", user_challenges_path, class: "btn-pink btn show-button rounded-pill" %>
    <%= link_to 'Log out', destroy_user_session_path, data: {turbo_method: :delete}, class: "btn-blue btn show-button rounded-pill" %>
  </div>
</div>

<div class="navbar navbar-banner navbar-light navbar-lewagon fixed-bottom" data-controller="selector">
  <div class="container d-flex justify-content-between text-center">
    <% if user_signed_in? %>
      <div class="col-3" data-action="click->selector#selectLink">
        <%= link_to '', root_path, class: "nav-link active fa-solid fa-house fa-2x mt-2",
            data: {selector_target: :navLink} %>
      </div>

      <div class="col-3" data-action="click->selector#selectLink">
        <%= link_to '', daily_challenge_path, class: "nav-link fa-solid fa-calendar-day fa-2x mt-2",
            data: {selector_target: :navLink} %>
      </div>

      <div class="col-3" data-action="click->selector#selectLink">
        <%= link_to '', dashboard_path, class: "nav-link fa-solid fa-user fa-2x mt-2",
            data: {selector_target: :navLink} %>
      </div>

      <div class="col-3">
        <%= link_to '', destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link fa-solid fa-door-open fa-2x mt-2" %>
      </div>
    <% else %>
      <div class="col-6" data-action="click->selector#selectLink">
        <%= link_to '', new_user_session_path, class: "nav-link fa-solid fa-right-to-bracket fa-2x",
            data: {selector_target: :navLink} %>
      </div>

      <div class="col-6" data-action="click->selector#selectLink">
        <%= link_to '', new_user_registration_path, class: "nav-link fa-solid fa-user-plus fa-2x",
            data: {selector_target: :navLink} %>
      </div>
    <% end %>
  </div>
</div>

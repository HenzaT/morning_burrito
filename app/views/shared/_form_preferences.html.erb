<%= bootstrap_form_for(@user) do |f| %>
  <div class="row">
    <div class="col-sm-6 d-none" id="length-preferences" data-preferences-target="length">
      <div class="my-2" data-action="click->preferences#scrollLength">
        <div class="text-center">
          <div class="d-grid gap-4" data-action="click->preferences#showLengthButton">
            <input type="radio" class="btn-check" name="user[length_preference]" value="6 minutes" id="6-minutes" autocomplete="off">
            <label class="p-button btn rounded-3 d-flex align-items-center" for="6-minutes">
              <%= image_tag "timer1.png", width: 65,  height: 65, class: "object-fit-cover" %>
              <div class="text-start ps-5">
                <h3 id="preference-subtitle">6 minutes - Quick Spark</h3>
                <p class=>Quick creative breath to <br>stretch your imagination!</p>
              </div>
              <div></div>
            </label>

            <input type="radio" class="btn-check" name="user[length_preference]" value="14 minutes" id="14-minutes" autocomplete="off">

            <label class="p-button btn rounded-3 d-flex align-items-center" for="14-minutes">
              <%= image_tag "timer2.png",width: 65,  height: 65, class: "object-fit-cover" %>
              <i class="fa-4x text-dark" id="form-icon"></i>
              <div class="text-start ps-5">
                <h3 id="preference-subtitle">14 minutes - Short Dive</h3>
                <p>Unlock new ideas and <br>connections while staying in <br>a focused flow</p>
              </div>
              <div></div>
            </label>

            <input type="radio" class="btn-check" name="user[length_preference]" value="32 minutes" id="32-minutes" autocomplete="off">
            <label class="p-button btn rounded-3 d-flex align-items-center" for="32-minutes">
              <%= image_tag "timer3.png",width: 65,  height: 65, class: "object-fit-cover" %>
              <i class="fa-5x text-dark" id="form-icon"></i>
              <div class="text-start ps-5">
                <h3 id="preference-subtitle">32 minutes - Swim</h3>
                <p>Fully immerse yourself. <br>Explore, refine and surprise <br>yourself with new ideas.</p>
              </div>
              <div></div>
            </label>
          </div>
        </div>
        <span class="text-center">
          <h1><i class="icon-tick fa-solid fa-circle-check fa-2x my-4 d-none" data-action="click->preferences#loadCategory" data-preferences-target="lengthTick"></i></h1>
        </span>
      </div>
    </div>

    <div class="col-sm-6 d-none" id="category-preferences" data-preferences-target="category">
      <h1 class="d-sm-none text-center my-4">What's your vibe? Pick your challenge type!</h1>
      <div class="my-2" data-action="click->preferences#scrollCategory">
        <div class="text-center" data-action="click->preferences#loadUpdate">
          <div class="d-grid gap-4" data-action="click->preferences#categoryIntoView">
            <input type="radio" class="btn-check" name="user[category_preference]" value="Crafting" id="crafting" autocomplete="off">
            <label class="p-button btn rounded-3 d-flex align-items-center" for="crafting">
              <%= image_tag "crafting.png",width: 65,  height: 65, class: "object-fit-cover" %>
              <i class="fa-4x text-dark" id="form-icon"></i>
              <div class="text-start ps-5">
                <h3 id="preference-subtitle">Crafting</h3>
                <p>Step away from the screen & <br>bring your ideas to life.</p>
              </div>
              <div></div>
            </label>

            <input type="radio" class="btn-check" name="user[category_preference]" value="Creative Writing" id="creative-writing" autocomplete="off">

            <label class="p-button btn rounded-3 d-flex align-items-center" for="creative-writing">
              <%= image_tag "notepad.png",width: 65,  height: 65, class: "object-fit-cover" %>
              <i class="fa-4x text-dark" id="form-icon"></i>
              <div class="text-start ps-5">
                <h3 id="preference-subtitle">Creative Writing</h3>
                <p>Explore ideas through growth. <br>Express yourself and reflect in new ways!</p>
              </div>
              <div></div>
            </label>

            <input type="radio" class="btn-check" name="user[category_preference]" value="Creative Lesson" id="creative-lesson" autocomplete="off">
            <label class="p-button btn rounded-3 d-flex align-items-center" for="creative-lesson">
              <%= image_tag "notepad.png",width: 65,  height: 65, class: "object-fit-cover" %>
              <i class="fa-4x text-dark" id="form-icon"></i>
              <div class="text-start ps-5">
                <h3 id="preference-subtitle">Creative Lesson</h3>
                <p>Discover unique insights on <br>ideas, imagination and test <br>your knowledge.</p>
                </div>
              <div></div>
            </label>
          </div>
        </div>
          <div class="form-update text-center my-4 d-none" data-preferences-target="update">
            <%= f.submit "Set My Preferences", class: "show-button btn btn-pink btn-lg rounded-pill", data: { preferences_target: :categoryTick } %>
          </div>
        <%# <span class="text-center">
        <h1 data-preferences-target="update"> %>
          <%#= f.submit "" do %>
            <%# <i class="icon-tick fa-solid fa-circle-check fa-2x mt-2 d-none" data-action="click->preferences#loadUpdate" data-preferences-target="categoryTick"></i> %>
          <%# end %>
          <%# <i class="icon-tick fa-solid fa-circle-check fa-2x mt-2 d-none" data-action="click->preferences#loadUpdate" data-preferences-target="categoryTick"></i> %>
        <%# </h1>
        </span> %>
      </div>
    </div>
  </div>
<% end %>
